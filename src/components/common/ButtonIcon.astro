---
import RightArrow from "@/assets/icons/rightarrow.svg";

const {
  type = "button",
  arrow = false,
  text,
  href,
  className,
  onClick = undefined,
} = Astro.props;
---

{
  type === "button" || type === "submit" ? (
    <button
      type={type}
      class={`inline-flex items-center justify-center rounded-full cursor-pointer bg-button px-6 py-4 text-xl text-white 
        hover:bg-card transition-background duration-300 ease-in-out
        ${className}`}
      onclick={onClick}
    >
      {text}
      {arrow && <RightArrow class="w-4 h-4 mx-1" />}
    </button>
  ) : (
    <a
      class={`inline-flex items-center justify-center rounded-full cursor-pointer bg-button px-6 py-4 text-xl text-white 
        hover:bg-card transition-background duration-300 ease-in-out
        ${className}`}
      href={href}
    >
      {text} {arrow && <RightArrow class="w-4 h-4 mx-1" />}
    </a>
  )
}
