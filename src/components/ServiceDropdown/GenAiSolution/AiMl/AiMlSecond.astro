---
import CoreAi from "@/components/DynamicProps/CoreAi.astro";
import u1 from "../../../../assets/icons/casestudy/u1.svg";
---

<div class="text-heading text-primary font-bold container mt-8 my-10 md:my-20">
  Core AI & ML Services
</div>
<div class="container grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-5">
  <CoreAi
    logo={u1}
    heading="Predictive Analytics"
    content={[
      "Customer churn prediction",
      "Sales forecasting",
      "Demand forecasting",
    ]}
  />

  <CoreAi
    logo={u1}
    heading="Natural Language Processing (NLP)"
    content={["Virtual assistants", "AI chatbots", "Sentiment analysis"]}
  />

  <CoreAi
    logo={u1}
    heading="Computer Vision"
    content={[
      "Facial recognition ",
      "Medical imaging analysis",
      "Automated quality control ",
    ]}
  />

  <CoreAi
    logo={u1}
    heading="Reinforcement Learning"
    content={["Autonomous systems", "Robotics", "Gaming strategies"]}
  />

  <CoreAi
    logo={u1}
    heading="AI-Powered Automation"
    content={["Robotic process automation (RPA)", "Intelligent workflows"]}
  />
  <CoreAi
    logo={u1}
    heading="Deep Learning Models "
    content={[
      "Personalized recommendations",
      " Fraud detection",
      " Fraud detection",
    ]}
  />
</div>
<div class="flex flex-col justify-center items-center container my-10 md:my-20">
  <h1 class="text-centerheading text-primary font-dmSans font-semibold">
    Tailored AI Solutions for Your Business
  </h1>
  <p class="text-secondary py-5 lg:py-10 text-subbody font-normal text-center">
    Whether you need AI models for specific applications or fully integrated AI
    systems, our custom development services ensure AI fits seamlessly into your
    business workflow
  </p>
</div>
<div class="text-heading text-primary font-bold my-10 md:my-20 container">
  Core AI & ML Services
</div>
<div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-5 container">
  <CoreAi
    logo={u1}
    heading="Healthcare"
    content={[
      "AI-powered diagnostic tools",
      "virtual healthcare assistants",
      "Predictive patient analytics",
    ]}
  />

  <CoreAi
    logo={u1}
    heading="Manufacturing"
    content={[
      "Predictive maintenance",
      "Automated quality control",
      "Smart factory operations",
    ]}
  />

  <CoreAi
    logo={u1}
