---
import GradientHeading from "@/components/DynamicProps/GradientHeading.astro";
import rails from "../../../../assets/icons/Services/cutomsoftdev/rails.svg";
import nodejs from "../../../../assets/icons/Services/cutomsoftdev/nodejs.svg";
import js from "../../../../assets/icons/Services/cutomsoftdev/js.svg";
import net from "../../../../assets/icons/Services/cutomsoftdev/net.svg";
import react from "../../../../assets/icons/Services/cutomsoftdev/react.svg";
import angular from "../../../../assets/icons/Services/cutomsoftdev/angular.svg";
import python from "../../../../assets/icons/Services/cutomsoftdev/python.svg";
import { Image } from "astro:assets";

const technologies = [
  "Artificial Intelligence",
  "Cloud Computing",
  "Internet of Things",
  "Automation-driven Solutions",
];
---

<div class="mt-40">
  <div
    class="flex flex-col justify-center items-center text-center h-auto px-4 space-y-2 lg:space-y-5 xl:space-y-10 bg-background container max-w-[1172px]"
  >
    <GradientHeading text="Custom Software, Tailored by Tech Experts" />
  </div>
</div>

<div class="flex flex-wrap justify-center items-center gap-4 p-4 mt-5 md:mt-10">
  {
    technologies.map((tech, index) => (
      <div
        key={index}
        class="w-[286px] max-h-[43px] flex items-center text-lg text-white font-normal justify-center border-2 border-white rounded-full p-[10px]"
      >
        {tech}
      </div>
    ))
  }
</div>

<h1
  class="text-centerheading text-primary font-dmSans font-semibold mt-20 text-center"
>
  Core Tech Expertise
</h1>

<div
  class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 max-w-[1675px] mx-auto p-4 mt-10"
>
  {
    [
      {
        img: rails,
        title: "Ruby on Rails",
        description:
          "Rapid development with high scalability for robust, dynamic web applications.",
      },
      {
        img: nodejs,
        title: "Node.js",
        description:
          "Event-driven, non-blocking architecture for building scalable, high-performance applications.",
      },
      {
        img: net,
        title: ".NET",
        description:
          "Enterprise-level solutions with cross-platform capabilities using Microsoftâ€™s secure and versatile framework.",
      },
      {
        img: python,
        title: "Python",
        description:
          "Versatile programming language, ideal for AI, data science, and machine learning applications.",
      },
      {
        img: js,
        title: "JavaScript",
        description:
          "Rich, interactive user interfaces and real-time web applications.",
      },
      {
        img: [react, angular],
        title: "React & Angular",
        description:
          "Dynamic, responsive front-end frameworks for modern web applications.",
      },
    ].map((item, index) => (
      <div
        key={index}
        class="border-2 border-white p-6 flex flex-col  items-center text-center bg-[#313131] max-w-[560px] "
      >
        <div class="flex  items-center w-full">
          {Array.isArray(item.img) ? (
            item.img.map((img, i) => (
              <Image key={i} src={img} alt="" class="mr-4 xl:pt-[60px]" />
            ))
          ) : (
            <Image src={item.img} alt="" class="mr-4 xl:pt-[60px] " />
          )}
          <h2
            class="text-primary lg:text-[32px] text-xl font-medium flex-grow text-center xl:pt-[61px] xl:pr-[52px]
         h-30 "
          >
            {item.title}
          </h2>
        </div>
        <p class="mt-2 text-[#B0B0B0] font-normal text-subheading xl:pt-[54px] mb-3">
          {item.description}
        </p>
      </div>
    ))
  }
</div>
