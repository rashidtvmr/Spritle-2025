<div class="grid md:grid-cols-5 gap-[15px] container p-4">
  {
    [
      { id: "01", title: "01", description: " Discovery" },
      { id: "02", title: "02", description: " Discovery" },
      { id: "03", title: "03", description: " Development" },
      { id: "04", title: "04", description: " Deployment" },
      { id: "05", title: "05", description: " Continuous Optimization" },
    ].map((item, index) => (
      <div
        key={index}
        class="border-2 border-white bg-[#313131] rounded-[10px] p-[30px] max-w-[327px] max-h-[221px] flex flex-col justify-center items-center text-center my-10 md:my-20 relative overflow-hidden"
      >
        <div
          class="absolute inset-0 bg-primary opacity-0 animate-light-effect"
