---
// index.astro or your desired page
import SuccessStories from "@/components/DynamicProps/SuccessStories.astro";
import electronics from "../../../../assets/images/service/visionAI/electronics.png";
import analytics from "../../../../assets/images/service/visionAI/analytics.png";

const cardData = [
  {
    image: electronics,
    heading: "98% Accuracy in Defect Detection for Electronics Manufacturer",
    description:
      "A leading electronics company implemented our Vision AI-based defect detection system, increasing inspection accuracy by 98% and reducing product recall rates by 15%.",
  },
  {
    image: analytics,
    heading: "20% Sales Increase through In-Store Behavior Analytics",
    description:
      "Our Vision AI system helped a major retail chain track customer behavior and optimize product placements. This resulted in a 20% increase in sales and improved inventory management",
  },
];
---

<h1
  class="text-centerheading text-primary font-dmSans font-semibold my-10 md:my-20 text-center container"
>
  Success Stories
</h1>
<div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:gap-12 gap-5 container">
    {cardData.map((card, index) => <SuccessStories key={index} {...card} />)}
  </div>
</div>
