---
import mobile from "../../assets/images/careers/mobileicon.png";
import thunder from "../../assets/images/careers/thundericon.png";
import star from "../../assets/images/careers/circlestaricon.png";
import clickicon from "../../assets/images/careers/webdesignericon.png";
import contactarrow from "../../assets/images/careers/contactarrow.png";

import { Image } from "astro:assets";

const jobs = [
  {
    title: "Mobile App Developer",
    location: "Chennai, India",
    salary: "$55,000 - $75,000 per year (based on experience)",
    experience: "Minimum 2 years of mobile app development experience.",
    skills:
      "Skills - Proficiency in iOS or Android development (Swift, Kotlin), knowledge of mobile app design patterns, experience with mobile testing and debugging.",
    logo: mobile,
  },
  {
    title: "Digital Marketing Specialist",
    location: "Chennai, India",
    salary: "$50,000 - $65,000 per year (based on expertise)",
    experience: "Minimum 3 years of digital marketing experience.",
    skills:
      "Proficiency in SEO, SEM, and social media marketing, experience with analytics tools (Google Analytics, etc.), content marketing expertise.",
    logo: thunder,
  },
  {
    title: "Project Manager",
    location: "Chennai, India",
    salary:
      "$60,000 - $80,000 per year (based on experience and qualifications)",
    experience: "Minimum 3 years of digital marketing experience.",
    skills:
      "Proficiency in SEO, SEM, and social media marketing, experience with analytics tools (Google Analytics, etc.), content marketing expertise.",
    logo: star,
  },
  {
    title: "Project Manager",
    location: "Chennai, India",
    salary:
      "$60,000 - $80,000 per year (based on experience and qualifications)",
    experience: "Minimum 3 years of digital marketing experience.",
    skills:
      "Proficiency in SEO, SEM, and social media marketing, experience with analytics tools (Google Analytics, etc.), content marketing expertise.",
    logo: star,
  },
  {
    title: "Web Designer",
    location: "Chennai, India",
    salary: "$45,000 - $60,000 per year (based on experience)",
    experience: "Minimum 1 year of professional web design experience.",
    skills:
      "Proficiency in Adobe Creative Suite (Photoshop, Illustrator, etc.), strong understanding of UI/UX design principles, responsive design expertise.",
    logo: clickicon,
  },
  {
    title: "Web Designer",
    location: "Chennai, India",
    salary: "$45,000 - $60,000 per year (based on experience)",
    experience: "Minimum 1 year of professional web design experience.",
    skills:
      "Proficiency in Adobe Creative Suite (Photoshop, Illustrator, etc.), strong understanding of UI/UX design principles, responsive design expertise.",
    logo: clickicon,
  },
];
---

<section class="container my-10 md:my-20">
  <h2
    class="text-primary font-semibold mb-5 md:mb-10 text-heading"
    style={{ fontFamily: "Sora, sans-serif" }}
  >
    Our Jobs
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:gap-10 gap-5">
    {
      jobs.map((job) => (
        <div class="group  p-6 border-primary border-2 rounded-2xl flex flex-col space-y-5 xl:space-y-9 p-4 mt-5 relative xl:h-screen xl:w-full xl:max-w-[850px] xl:max-h-[404px] px-2 md:px-7 xl:px-15">
          <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-4 justify-between">
            <div class="flex items-center space-x-4">
              <Image
                src={job.logo}
                alt={job.title}
                class="w-16 h-16  lg:w-24 lg:h-24"
              />
              <div class="text-center sm:text-left">
                <h3 class="text-white font-semibold text-subheading">
                  {job.title}
                </h3>
                <p class="text-secondary text-base lg:text-lg font-normal">
                  {job.location}
                </p>
              </div>
            </div>
            <div class="flex justify-center md:block">
              <button class="border-2 border-primary rounded-full py-2 px-4 flex items-center  space-x-4 group-hover:bg-black w-full max-w-[180px] md:max-w-full sm:w-auto">
                <span class="text-white font-normal text-base lg:text-lg">
                  Apply Now
                </span>
                <Image
                  src={contactarrow}
                  alt="arrow"
                  class="w-10 h-10 md:w-10 md:h-10 lg:w-17 lg:h-12 group-hover:invert"
                />
              </button>
            </div>
          </div>
          <p class="text-white text-base lg:text-lg flex items-center">
            <img src="/assets/salary.png" alt="salary" class="w-7 h-7 mr-2" />
            {job.salary}
          </p>
          <p class="text-white text-base lg:text-lg flex items-center">
            <img
              src="/assets/experience.png"
              alt="experience"
              class="w-7 h-7 mr-2"
            />
            {job.experience}
          </p>
          <p class="text-white text-base lg:text-lg flex items-center">
            <img src="/assets/skills.png" alt="skills" class="w-7 h-7 mr-2" />
            {job.skills}
          </p>
        </div>
      ))
    }
  </div>
</section>
