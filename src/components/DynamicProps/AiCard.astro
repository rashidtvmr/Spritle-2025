---
// AiCard.astro
const { image, title, description } = Astro.props;
import { Image } from "astro:assets";
import RightArrow from "@/assets/icons/rightarrow.svg";
---

<div
  class="flex justify-between border-2 border-[#D6D6D6] rounded-lg overflow-hidden p-3 lg:p-6 w-full h-full group focus:outline-none focus:ring-1 focus:ring-button focus:border-button hover:border-button hover:duration-300"
>
  <div class="">
    <Image
      src={image}
      alt={title}
      class="w-full rounded-xl object-cover h-50 md:h-54 lg:h-80 xl:h-88"
    />
    <div class="mt-2 md:mt-6">
      <div class="flex items-center justify-between">
        <h2 class="text-primary text-subtitle font-medium">{title}</h2>
        <div
          class="flex justify-end border rounded-full h-fit p-2 group-focus:border-button group-focus:bg-button group-hover:bg-button group-hover:border-button transition-[background] duration-300"
        >
          <RightArrow class="size-6" />
        </div>
      </div>
    </div>
    <div>
      <p class="text-[#B0B0B0] font-medium text-subheading my-2 md:my-5">
        {description}
      </p>
    </div>
  </div>
</div>
