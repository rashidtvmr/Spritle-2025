---
interface Props {
  text: string;
  maxWidth?: string;
}
const { text, maxWidth } = Astro.props;
---

<h1
  class="font-normal inline-block text-title bg-gradient-to-t from-white to-[rgba(255,255,255,0.3)] bg-clip-text text-transparent xl:leading-[118px]"
  style={`max-width: ${maxWidth || "1511px"};`}
>
  {text}
</h1>
