---
interface BlogItem {
  image: string;
  title: string;
  description: string;
  author: string;
  date: string;
  readTime: string;
}

interface Props {
  items: BlogItem[];
}

const { items } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 ">
  {items.map((item) => (
    <div class="p-3 border rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
      <!-- Image section -->
      <div class="aspect-video overflow-hidden  border rounded-xl">
        <img 
          src={item.image} 
          alt={item.title} 
          class="w-full h-full object-cover"
          width="800"
          height="450"
        />
      </div>

      <!-- Text content section -->
      <div class=" flex flex-col gap-4">
        <h3 class="text-primary  font-medium text-subtitle max-w-3/4 mt-3">{item.title}</h3>
        <p class="text-secondary text-body  max-w-lg">{item.description}</p>

        <!-- Author info section -->
        <div class="flex items-center gap-3 mt-2 ">
          <img 
            class="w-15 h-15 rounded-full object-cover" 
            src="/assets/bloglogo1.svg" 
            alt="Author avatar"
          />
          <div>
            <div class="font-medium text-body text-white">{item.author}</div>
            <div class="text-xs mt-2    ">
              {item.date} Â· {item.readTime}
            </div>
          </div>
        </div>
      </div>
    </div>
  ))}
</div>