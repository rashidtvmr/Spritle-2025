---
interface BlogItem {
  image: string;
  title: string;
  description: string;
  date: string;
}

interface Props {
  items: BlogItem[];
}

const { items } = Astro.props;
---

<div class="">
  {items.map((item) => (
    <div class="p-3 border xl:bg-transparent rounded-lg hover:bg-card transition-colors
duration-300 ease-in-out cursor-pointer	">
      <!-- Image section -->
      <div class="border rounded-xl  w-full  h-full object-cover rounded-lg">
        <img 
          src={item.image} 
          alt={item.title} 
          class=""
        />
      </div>

      <!-- Content section -->
      <div class=" space-y-2  lg:space-y-6 mb-3 ">
        <h3 class="text-primary font-medium text-subtitle mt-1 md:mt-3 lg:mt-5">{item.title}</h3>
        <p class="text-secondary text-body">{item.description}</p>
        <div class="text-xs mt-2">{item.date}</div>
      </div>
    </div>
  ))}
</div>
