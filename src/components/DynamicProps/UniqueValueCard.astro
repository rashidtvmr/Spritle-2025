---
const { title, description, titleStyle, logo: Logo = "" } = Astro.props;
---

<div
  class="flex flex-col items-center justify-between text-center border-2 border-primary p-2 md:p-6 pt-3"
>
  <div class="items-center flex flex-col my-1 md:my-3 lg:my-5">
    <Logo class="mb-4 max-w-[54px] max-h-[52px] " />
  </div>
  <h2
    class:list={[
      "text-primary text-subtitle font-medium text-center h-14 md:h-15 lg:h-27 xl:h-24",
      { [titleStyle]: titleStyle },
    ]}
  >
    {title}
  </h2>
  <p
    class="text-[#B0B0B0] font-normal text-subheading text-center py-1  lg:pb-10 flex-1"
  >
    {description}
  </p>
</div>
