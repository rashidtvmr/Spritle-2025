---
import { Image } from "astro:assets";
import blogslogo from "@/assets/icons/bloglogo1.svg";

interface BlogItem {
  image: string;
  title: string;
  description: string;
  author: string;
  date: string;
  readTime: string;
}

const { item } = Astro.props;
---

<div
  class="p-3 border xl:bg-transparent rounded-lg hover:bg-card transition-colors
duration-300 ease-in-out cursor-pointer"
>
  <!-- Image section -->
  <div class="aspect-video overflow-hidden border rounded-xl">
    <Image
      src={item.image}
      alt={item.title}
      class="w-full h-full object-cover"
      width="800"
      height="450"
    />
  </div>

  <!-- Text content section -->
  <div class="flex flex-col gap-4">
    <h3 class="text-primary font-medium text-subtitle max-w-3/4 mt-3">
      {item.title}
    </h3>
    <p class="text-secondary text-body max-w-lg">{item.description}</p>

    <!-- Author info section -->
    <div class="flex items-center gap-3 mt-2">
      <Image
        src={blogslogo}
        alt="Author avatar"
        class="w-[60px] h-[60px] rounded-full object-cover"
      />
      <div>
        <div class="font-medium text-body text-white">{item.author}</div>
        <div class="text-xs mt-2">
          {item.date} Â· {item.readTime}
        </div>
      </div>
    </div> 
  </div>
</div>
