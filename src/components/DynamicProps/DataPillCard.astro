---
// Define props for the component
const { logo, heading, content, description } = Astro.props;
---

<div
  class="bg-[#2E2E2E]  w-full  h-auto rounded-lg border-white border-2 p-4 flex flex-col items-center gap-3 mb-2"
>
  <!-- Logo -->
  <img src={logo} alt="Logo" class="max-w-[54px] max-h-[48px] mt-4  " />

  <!-- Heading -->
  <h1 class="text-center font-medium text-primary xl:text-[32px] text-xl mb-1">
    {heading}
  </h1>

  <!-- Description below Heading -->
<p class="text-[#B0B0B0] font-normal text-subheading text-center py-3">
    {description}
  </p>

  <!-- Content Box (Pill Layout) -->
  <div class="flex flex-wrap justify-center gap-[0.6rem] mb-7">
    {
      content.map((item) => (
        <div class="xl:px-[15px] px-3 md:px-6 max-h-[43px] py-[5px] border-white border-2 rounded-full text-white font-normal md:text-lg text-base flex items-center justify-center">
          {item}
        </div>
      ))
    }
  </div>

  <!-- Description below Pill Layout -->
</div>
