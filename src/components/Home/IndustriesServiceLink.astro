---
const { link, title, description } = Astro.props;
import RightArrow from "@/assets/icons/rightarrow.svg";
---

<a
  href={link}
  aria-label={title}
  class="flex justify-between border-2 border-primary rounded-xl p-5 md:p-6 shadow-lg
   w-full overflow-hidden group focus:outline-none focus:ring-1 focus:ring-button focus:border-button hover:border-button"
>
  <div class="flex-1 h-auto">
    <h3 class="text-subtitle font-medium text-primary h-16">{title}</h3>
    <p class="text-secondary text-lg font-medium py-3">
      {description}
    </p>
  </div>
  <div
    class="flex justify-end border rounded-full h-fit p-2 group-focus:border-button group-focus:bg-button group-hover:bg-button group-hover:border-button transition-[background]"
  >
    <RightArrow class="size-6" />
  </div>
</a>
