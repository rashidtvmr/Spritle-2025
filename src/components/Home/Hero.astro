---
import "swiper/css";
import "swiper/css/effect-coverflow";
import nurse from "../../assets/images/home/nurse.png";
import manworking from "../../assets/images/home/manworking.png";
import laptopstats from "../../assets/images/home/laptopstats.png";
import team from "../../assets/images/home/team.png";
import nvidiagoogle from "../../assets/images/home/nvidiagoogle.png";
import devices from "../../assets/images/home/devices.png";

import { Image } from "astro:assets";

const slides = [
  {
    // text: "Spritle's Gen AI solutions drive <br class='hidden md:block'/> operational cost savings for our clients",
    // text: "The future is AI and We’re <br class='md:block'/> the Architects",
    text: "True power of Gen AI in action - How we <br class='hidden md:block' /> tap it to cut costs in daily operations",
    img: nurse,
    alt: "Gen AI",
  },
  {
    text: "Boost Safety & Profits with our Real-Time<br class='hidden md:block' /> Computer Vision monitoring solution",
    img: manworking,
    alt: "Vision AI",
  },
  {
    text: "World’s most Innovative AI Facility & asset<br class='hidden md:block' /> management system is Now Live",
    img: laptopstats,
    alt: "Digital Transformation",
  },
  {
    text: "Go-live within 24 Hours! Yes, we use<br /> AI  to build your dreams!",
    img: team,
    alt: "Transformation",
  },
  {
    text: "Thriving ecosystem with our Premium Partnerships - Google, Nvidia, Intel & more!",
    img: nvidiagoogle,
    alt: "Official Partners",
  },
  {
    text: "Dedicated Virtual teams delivering global <br /> offshoring services for 16 years",
    img: devices,
    alt: "Custom Apps",
  },
];
---

<section
  class="heroswiper swiper h-[60vh] lg:h-[calc(100vh-150px)] relative !pb-10"
  role="region"
  aria-label="Hero Slides"
>
  <ul class="hero-swiper swiper-wrapper h-full" role="list">
    {
      slides.map((slide, index) => (
        <li
          class="swiper-slide will-change-transform"
          data-index={index}
          role="listitem"
          tabindex="0"
        >
          <div class="flex flex-col h-full items-center text-center md:gap-y-10">
            <h1
              class="
              flex items-center text-center justify-center will-change-[opacity]
              h-[250px] md:h-[250px] lg:h-[250px] w-[95%]
              text-xl md:text-2xl lg:text-3xl xl:text-4xl 
              opacity-0 slide-text font-medium text-[#f5f5f5]
              "
              set:html={slide.text}
            />

            <div class="h-full w-full will-change-auto aspect-square lg:aspect-auto">
              <Image
                decoding={"sync"}
                loading="eager"
                class="slide-image w-full h-full rounded-primary object-cover lg:object-fill"
                src={slide.img}
                alt={slide.alt}
              />
            </div>
          </div>
        </li>
      ))
    }
  </ul>
  <!-- <nav class="flex items-center justify-center relative w-full"> -->
  <nav
    class="hero-swiper swiper-pagination !-bottom-0"
    role="navigation"
    aria-label="Slide pagination"
  >
  </nav>
  <!-- </nav> -->
</section>

<script src="@/lib/index_hero.js"></script>
<style is:global>
  .heroswiper .swiper-pagination-bullet,
  .heroswiper .swiper-pagination-bullet-active {
    background-color: var(--color-button) !important; /* Default color */
  }
</style>
