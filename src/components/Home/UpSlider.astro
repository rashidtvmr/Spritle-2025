---
import { Image } from "astro:assets";

import nestle from "../../assets/images/home/nestle.png";
import hyundai from "../../assets/images/home/hyundai.png";
import STeng from "../../assets/images/home/STeng.png";
import panasonic from "../../assets/images/home/panasonic.png";
import CII from "../../assets/images/home/CII.png";
import stanford from "../../assets/images/home/stanford.png";
import triangle from "../../assets/images/home/trianglelogo.png";
import pinnacle from "../../assets/images/home/pinnaclelogo.png";
import timesports from "../../assets/images/home/timesportslogo.png";
import innerkraft from "../../assets/images/home/innerkraft.png";
import haleon from "../../assets/images/home/haleonlogo.png";
import treelogo from "../../assets/images/home/treelogo.png";
import enterprise from "../../assets/images/home/enterprise.png";

const UpSliderData = [
  {
    id: "slide1",
    title: "Enterprise-Level Tech, Made Simple:",
    description:
      "Efficiently managing a large team demands a solid technological foundation. Our services offer robust, secure, and user-friendly solutions tailored to your needs. Picture a team of over 150 members, seamlessly collaborating with the aid of precisely crafted tools. This is the vision of future work that we're adept at bringing to fruition for enterprises.",
    p: "Large enterprise businesses that became our clients : ",
    image: enterprise,
    logos: [nestle, hyundai, STeng, panasonic, CII, stanford],
  },
  {
    id: "slide2",
    title: "Transitioning from startup to scaleup?",
    description:
      "Embrace growth with our flexible tech solutions tailored for mid-level companies. Stay agile as your business evolves, empowered by our support every step of the way, so you can focus on what truly mattersâ€”achieving your goals",
    p: "Up-and-coming companies we partnered with early on  ",
    image: enterprise,
    logos: [triangle, pinnacle],
  },
  {
    id: "slide3",
    title: "Thinking about launching a startup?",
    description:
      "Are you a startup grappling with managing both your creative concepts and technical infrastructure? We understand the struggle. Our user-friendly solutions are designed to adapt as your startup expands. Focus on your passion while we handle the tech, accelerating your journey to realizing your dreams.",
    p: "Young companies we partnered with",
    image: enterprise,
    logos: [treelogo, timesports, innerkraft, haleon],
  },
];
---

<div class="container px-0">
  <div
    id="upSliderWrapper"
    class="flex flex-col gap-10"
    style={{ scrollbarWidth: "none", msOverflowStyle: "none" }}
  >
    {
      UpSliderData.map((slide, index) => (
        <div
          id={`slide-${index}`}
          class={`slide-${index} upSliderSlide py-18   my-10  gap-10 flex flex-col lg:flex-row-reverse w-full  h-[100vh] lg:h-[46rem] flex-shrink-0 items-center justify-between px-6 lg:px-10 bg-black rounded-lg  sticky top-0 lg:top-[10vh] overflow-hidden`}
        >
          <div class="w-full lg:w-1/2  flex justify-center relative h-auto">
            <div class="h-[20vh] sm:h-[40vh] lg:h-[400px] w-full rounded-lg shadow-lg overflow-hidden">
              <Image
                src={slide.image}
                alt="Map"
                width={750}
                height={469.63}
                inferSize={true}
                class="w-full h-full object-cover rounded-lg"
              />
            </div>
          </div>
          <div class="w-full lg:w-1/2 flex flex-col gap-2  sm:space-y-9 md:space-y-1 lg:md:space-y-4  ">
            <h2 class="text-2xl lg:text-4xl text-white font-medium ">
              {slide.title}
            </h2>
            <p class="text-base md:text-lg xl:text-2xl font-normal text-primary ">
              {slide.description}
            </p>
            <p class="text-base md:text-lg xl:text-2xl font-normal text-primary">
              {slide.p}
            </p>
            <div class="flex flex-wrap gap-3 justify-center lg:justify-start  h-auto w-full">
              {slide.logos.map((logo) => (
                <Image
                  src={logo}
                  alt="Logo"
                  width={80}
                  height={80}
                  inferSize={true}
                  class="h-auto w-14 lg:w-20 bg-white rounded-lg object-contain"
                />
              ))}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
