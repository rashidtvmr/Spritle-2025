import LnT from "../../assets/images/home/l&t.png";
import STeng from "../../assets/images/home/STeng.png";
import motorola from "../../assets/images/home/motorola.png";
import UN from "../../assets/images/home/UN.png";
import royalenfield from "../../assets/images/home/royalenfield.png";
import changi from "../../assets/images/home/changi.png";
import livingmatrix from "../../assets/images/home/livingmatrix.png";
import reach from "../../assets/images/home/reach.png";
import innerkraft from "../../assets/images/home/innerkraft.png";
import moddo from "../../assets/images/home/moddo.png";
import shareandremember from "../../assets/images/home/shareandremember.png";
import nanny from "../../assets/images/home/nanny.png";
import {Image} from "astro:assets";
---
<div
  class="lg:mt-40 md:mt-20 mt-4"
  style={{
    background: "linear-gradient(to bottom, #20202066, #00000047, #17171766)",
  }}
>
  <div class="clients-container xl:py-5 py-6 mt-10 md:mt-15">
    <div
      class="clients-content space-y-1 md:space-y-10 h-[auto] md:h-[53vh] lg:h-[903px] w-[100%] mt-6 mb-1"
    >
