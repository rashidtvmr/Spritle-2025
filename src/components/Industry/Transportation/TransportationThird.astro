---
// index.astro or your desired page
import SuccessStories from "@/components/DynamicProps/SuccessStories.astro";

const cardData = [
  {
    image: "/assets/transport1.svg",
    heading: "AI Fleet Management for Logistics Provider",
    description:
      "Developed an AI-powered fleet management system, reducing fuel costs by 15% and improving delivery times by 20%",
  },
  {
    image: "/assets/transport2.svg",
    heading: "IoT-Enhanced Supply Chain Tracking",
    description:
      "Implemented IoT sensors for a global logistics company, providing real-time shipment visibility and reducing losses by 25%",
  },
  {
    image: "/assets/transport3.svg",
    heading: "Predictive Analytics for Demand Planning",
    description:
      "Built a demand forecasting model that improved stock management for a retailer, reducing excess inventory by 18%",
  },
];
---

<div class="container my-10 md:my-20">
  <div class="text-heading text-primary md:mb-12 mb-2 font-semibold">
    Industry Success Stories
  </div>
  <div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-[54px] gap-y-6">
      {cardData.map((card, index) => <SuccessStories key={index} {...card} />)}
    </div>
  </div>
</div>
