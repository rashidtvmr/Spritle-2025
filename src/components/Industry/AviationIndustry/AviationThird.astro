---
// index.astro or your desired page
import SuccessStories from "@/components/DynamicProps/SuccessStories.astro";

const cardData = [
  {
    image: "/assets/aviation1.svg",
    heading: "Predictive Aircraft Maintenance for a Major Airline",
    description:
      " Implemented an AI-powered maintenance system, reducing unscheduled downtime by 35%",
  },
  {
    image: "/assets/aviation2.svg",
    heading: "Real-Time Data Analytics for Airport Operations",
    description:
      "Designed a real-time data platform, improving passenger throughput and reducing delays at a major international airport",
  },
  {
    image: "/assets/aviation3.svg",
    heading: "IoT-Driven Baggage Tracking",
    description:
      "Enabled a seamless baggage tracking system, decreasing lost baggage rates by 40% across multiple airports",
  },
];
---

<div class="container  my-10 md:my-20">

  <div class="text-heading text-primary md:mb-12 mb-2 font-bold">
    Industry Use Cases
  </div>
  <div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-[54px] gap-y-6">
      {cardData.map((card, index) => <SuccessStories key={index} {...card} />)}
    </div>
  </div>
  
</div>