import ServicePageContent from "@/components/services/ServicePageContent.astro";
import Layout from "@/layouts/Layout.astro";
import u1 from "@/assets/icons/casestudy/u1.svg";
import u2 from "@/assets/icons/casestudy/u2.svg";
import u3 from "@/assets/icons/casestudy/u3.svg";
import sentiment from "@/assets/images/service/visionAI/sentiment.png";
import prediction from "@/assets/images/service/visionAI/prediction.png";
