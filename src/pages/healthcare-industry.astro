---
// src/pages/industries/healthcare.astro
import IndustryPageContent from "@/components/Industry/IndustryPageContent.astro";
import patient from "../assets/images/industry/healthcare/patient.png";
import radiology from "../assets/images/industry/healthcare/radiology.png";
import telemedicine from "../assets/images/industry/healthcare/telemedicine.png";
import u1 from "../../src/assets/icons/casestudy/u1.svg";
import u2 from "../../src/assets/icons/casestudy/u2.svg";
import u3 from "../../src/assets/icons/casestudy/u3.svg";
import arrow from "../../src/assets/icons/arrow.svg";

const healthcareContent = {
  heroSection: {
    heading: "Transforming Healthcare with Cutting-Edge Technology",
    description:
      "Empowering providers and patients with digital solutions that drive better outcomes",
    buttonText: "Explore Our Healthcare Innovations",
    buttonIcon: "/assets/rightarrow.svg",
    subHeading: "Digital Transformation for Modern Healthcare",
    subDescription:
      "We bridge the gap between healthcare needs and technology, creating secure, scalable solutions that enhance patient care and streamline operations",
  },
  solutionsSection: {
    title: "Healthcare Solutions We Offer",
    solutions: [
      {
        logo: u1,
        title: "AI-Powered Diagnostics",
        description:
          "Leverage AI to enhance diagnostic accuracy and accelerate medical decision-making with intelligent data-driven insights",
        titleStyle: "pb-1 lg:pb-11",
      },
      {
        logo: u2,
        title: "Smart Telehealth Scheduling",
        description:
          "Enable automated appointment scheduling and resource optimization using intelligent algorithms.",
        titleStyle: "pb-1  xl:pb-10",
      },
      {
        logo: u3,
        title: "Predictive Analytics for Patient Outcomes",
        description:
          "Utilize data modeling to predict patient risks and improve care outcomes across treatment cycles.",
        titleStyle: "pb-1 lg:pb-4",
      },
      {
        logo: u3,
        title: "IoT for Healthcare",
        description:
          "Enhance patient care with IoT-enabled devices, enabling real-time monitoring and proactive health interventions",
        titleStyle: "pb-1 md:pb-7",
      },
    ],
  },
  useCasesSection: {
    title: "Industry Use Cases",
    cases: [
      {
        image: patient,
        heading: "Remote Patient Monitoring Platform",
        description:
          "Developed a real-time monitoring system for cardiac patients, reducing hospital readmissions by 25%",
      },
      {
        image: telemedicine,
        heading: "Telemedicine Solution for Rural Healthcare",
        description:
          "Implemented a telemedicine platform, improving access to care for patients in remote areas and decreasing wait times",
      },
      {
        image: radiology,
        heading: "AI-Driven Radiology Tool",
        description:
          "Created an AI-powered radiology tool that increased diagnostic accuracy by 40%, helping radiologists detect abnormalities faster.",
      },
    ],
  },
  whyChooseSection: {
    title: "Why Generative AI is a Game Changer",
    items: [
      {
        title: "Industry Expertise",
        description:
          "Extensive experience working with healthcare providers, hospitals, and life sciences.",
      },
      {
        title: "Secure & Compliant",
        description:
          "Solutions designed to meet strict healthcare regulations like HIPAA and GDPR.",
      },
      {
        title: "Innovation-Driven",
        description: "Pioneering the use of AI, IoT, and cloud in healthcare.",
      },
    ],
  },
  ctaSection: {
    heading: "Let's Build the Future of Health Together",
    description:
      "Transform your practice with state-of-the-art healthcare technology",
    buttonText: "Get in Touch with Our Healthcare Experts",
    buttonIcon: "/assets/btnstar.svg",
  },
};
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <IndustryPageContent {...healthcareContent} />
</Layout>
