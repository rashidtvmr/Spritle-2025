// src/pages/industries/education.astro
import IndustryPageContent from "@/components/Industry/IndustryPageContent.astro";
import Layout from "../layouts/Layout.astro";
import dashboard from "../assets/images/industry/education/dashboard.png";
import LMS from "../assets/images/industry/education/LMS.png"
import virtualclass from "../assets/images/industry/education/virtualclass.png"
import u1 from "../../src/assets/icons/casestudy/u1.svg"
import u2 from "../../src/assets/icons/casestudy/u2.svg";
